<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/pop_up_detail_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="14dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/word_detail_card"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="9dp">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hold_sign" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="26dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/english_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rainy" />

                <TextView
                    android:id="@+id/word_vowel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/bevietnampro_light"
                    android:text="/ˈreɪ.ni/" />

                <TextView
                    android:id="@+id/word_translate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="có mưa" />

                <TextView
                    android:id="@+id/word_example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/bevietnampro_light"
                    android:text="Ex: There are two rainy seasons per year." />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/close_modal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/no_bg_button_hover"
        android:fontFamily="@font/bevietnampro_bold"
        android:text="Xong"
        android:textColor="@drawable/txtcolor_no_bg_button_hover" />

</LinearLayout>