<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="13dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/topic_practice"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/topic_thumb"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/hold_sign" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_topic_practice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weather 1"
                android:textColor="#FFFFFF"
                android:textFontWeight="700"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/start_exam_button"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/start_exam_bg"
                android:fontFamily="@font/bevietnampro_light"
                android:includeFontPadding="false"
                android:paddingHorizontal="21dp"
                android:text="Start"
                android:textAllCaps="false"
                android:textColor="@drawable/txtcolor_no_bg_button_hover"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>