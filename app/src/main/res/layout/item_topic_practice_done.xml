<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="13dp"
    android:layout_marginLeft="13dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/card_topic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/topic_practice_done"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_topic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_222" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_topic_practice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C28154"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:text="Lesson 1" />

            <TextView
                android:id="@+id/des_topic_practice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C28154"
                android:layout_marginTop="6dp"
                android:textFontWeight="100"
                android:autoSizeTextType="uniform"
                android:textSize="15sp"
                android:text="Weather" />
        </LinearLayout>
        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2A8622"
            android:textFontWeight="100"
            android:autoSizeTextType="uniform"
            android:textSize="18sp"
            android:text="DONE" />
    </LinearLayout>
</androidx.cardview.widget.CardView>