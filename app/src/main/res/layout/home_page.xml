<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22pt"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="22dp"
        android:background="@drawable/customborder"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:src="@drawable/group"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A06B5B"
                android:textFontWeight="700"
                android:textSize="20dp"
                android:text="Hello Nene!" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A06B5B"
                android:textFontWeight="100"
                android:fontFamily="@font/bevietnampro_light"
                android:autoSizeTextType="uniform"
                android:textSize="16dp"
                android:text="Ready for practice English today?" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="18dp"
        android:layout_marginLeft="22dp"
        android:text="Daily Practice"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_daily_practice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:cacheColorHint="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="22dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="70dp"
                android:background="@drawable/btn_daily_vocab"
                android:gravity="center"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_daily_vocab" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:ellipsize="start"
                android:maxEms="1"
                android:text="Daily Vocab"
                android:textColor="#A06B5B"
                android:textFontWeight="100"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32px"
            android:layout_marginLeft="32px"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="70dp"
                android:background="@drawable/btn_daily_sentences"
                android:gravity="center"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_daily_sentences" />
            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:text="Daily Sentences"
                android:textColor="#A06B5B"
                android:textFontWeight="100"
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32px"
            android:layout_marginLeft="32px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="70dp"
                android:background="@drawable/btn_exams"
                android:gravity="center"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_exams" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:text="Exams"
                android:ellipsize="start"
                android:textColor="#A06B5B"
                android:textFontWeight="100"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="70dp"
                android:background="@drawable/btn_topic_practice"
                android:gravity="center"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_topic_practice" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:ellipsize="start"
                android:maxEms="1"
                android:text="Topic Practice"
                android:textColor="#A06B5B"
                android:textFontWeight="100"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="18dp"
        android:layout_marginLeft="22dp"
        android:text="Recently Learn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_daily_practice_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:cacheColorHint="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:gravity="center_vertical"
        android:layout_marginTop="18dp"
        android:background="@drawable/an_exam"
        android:layout_height="38dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="53dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="Let's take an exam!"/>

        <LinearLayout
            android:layout_width="100dp"
            android:background="@drawable/btn_start"
            android:gravity="center"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="5dp"
            android:layout_height="25dp">

            <TextView
                android:textColor="#A06B5B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Start!"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>